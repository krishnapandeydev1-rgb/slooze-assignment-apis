generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  password       String
  role           Role
  country        Country
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  orders         Order[]

}

model Restaurant {
  id          String      @id @default(uuid())
  name        String      @unique
  country     Country
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  menuItems   MenuItem[]

}

model MenuItem {
  id            String       @id @default(uuid())
  name          String
  price         Float
  restaurantId  String
  restaurant    Restaurant   @relation(fields: [restaurantId], references: [id])
  orderItems    OrderItem[]
}

model Order {
  id            String        @id @default(uuid())
  userId        String
  totalAmount   Float
  status        OrderStatus   @default(PENDING)
  country       Country
  createdAt     DateTime      @default(now())
  user          User          @relation(fields: [userId], references: [id])
  items         OrderItem[]
  paymentMethod PaymentMethod?
}

model OrderItem {
  id            String      @id @default(uuid())
  orderId       String
  order         Order       @relation(fields: [orderId], references: [id])
  menuItemId    String
  menuItem      MenuItem    @relation(fields: [menuItemId], references: [id])
  quantity      Int
  price         Float
}

model PaymentMethod {
  id         String     @id @default(uuid())
  orderId    String     @unique
  type       PaymentType
  details    Json
  createdAt  DateTime   @default(now())
  
  order      Order      @relation(fields: [orderId], references: [id])
}


enum Role {
  ADMIN
  MANAGER
  MEMBER
}

enum Country {
  INDIA
  AMERICA
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentType {
  CARD
  UPI
  NETBANKING
  CASH
}
